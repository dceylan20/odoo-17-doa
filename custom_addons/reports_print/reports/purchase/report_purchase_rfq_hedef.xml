<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Şablonunuzu doğru dış ID ile tanımlayın -->
        <template id="report_purchase_rfq_hedef_document">
                <t t-call="reports_print.external_layout_yena">
                    <style>
                        * {
                            font-family: "DejaVu Sans", Arial, sans-serif !important;
                        }
                    </style>
            <h1 style="text-align:center;"><span t-field="o.project_purchase.name"/> - <span t-field="o.name"/> ÇAĞRI MEKTUBU</h1>
             <br/>
                  <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                        <table style="font-size:11pt; width: 100%;">
                            <tbody>
                                <tr>
                                    <!-- Firma Bilgileri -->
                                    <td style="width:45%; padding-left: 10px; vertical-align: top;">
                                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 120px;" alt="Logo"/>
                                        <div style="margin-top: 20px;">
                                          
                                            <strong> <span t-field="o.company_id.name"/></strong>
                                                  <br/>
            
                                                  <span t-field="o.company_id.street"/><br/>
                                                  <span t-field="o.company_id.street2"/><br/>
                                                   <span t-field="o.company_id.city"/>
                                                  <span> </span>
                                                  <span t-field="o.company_id.state_id"/> 
                                                  <span> </span>
                                                  <span t-field="o.company_id.zip"/> 
                                                  <span> </span>
                                                  <br/>
                                                  Vergi No: <span t-field="o.company_id.vat"/>
                                                  <br/>
                                                  </div>
                                    </td>
                                    
            
                                    <!-- Müşteri Bilgileri -->
                                    <td style="width:45%; padding-right: 10px; vertical-align: top;">
                                            <span t-field="o.partner_id"/>
                                            <br/>
                                            <span t-field="o.partner_id.street"/>
                                            <span>, </span>
                                            <span t-field="o.partner_id.zip"/>
                                            <span> </span>
                                            <span t-field="o.partner_id.city"/>
                                            <br/>
                                            <span t-field="o.partner_id.country_id.name"/>
                                            <br/>
            
                                        <!-- Diğer Bilgiler -->
                                        <div style="margin-top: 20px;">
                                            <!--<div t-if="o.vendor_ref"><b>Tedarikçi Referans No:</b> <span t-field="o.vendor_ref"/></div>-->
                                            <br/><br/>
                                            <div t-if="o.name"><b>YENA Talep No:</b> <span t-field="o.name"/></div>
                                            <!--<div t-if="o.project_purchase"><b>Proje No:</b> <span t-field="o.project_purchase.name"/></div>-->
                                            <t t-set="today" t-value="datetime.datetime.now()"/>
                                            <div>
                                                <b>Döküman Tarihi:</b> <span t-esc="today.strftime('%d/%m/%Y')"/>
                                            </div>
                                            <div t-if="o.contact_id.name"><b>Yetkili:</b> <span t-field="o.contact_id.name"/></div>
                                            <div t-if="o.incoterm_id"><b>Teslim Şekli:</b> <span t-field="o.incoterm_id" /></div>
                                            <div t-if="o.delivery_date"><b>Teslim Tarihi:</b> <span t-field="o.delivery_date" t-options="{'format': 'dd/MM/yyyy'}" /></div>
                                            <div t-if="o.user_id"><b>Hazırlayan:</b> <span t-field="o.user_id" /></div>
                                        </div>
                                        
                                    </td>
                               
                                </tr>
                            </tbody>
                        </table>
              
                    <div class="page">
                        <br/>
                        <table class="table table-sm o_main_table" style="font-size:11pt">
                    <thead>
                        <tr style="text-align:center">
                            <!-- Ürün No -->
                            <t t-set="show_product_no" t-value="any(line.product_id for line in o.order_line)"/>
                            <t t-if="show_product_no">
                                <th name="th_drawingno" class="text-center"><strong>Ürün No</strong></th>
                            </t>
                            
                            <!-- Müşteri Ref. No -->
                            <t t-set="show_customer_ref_no" t-value="any(o.customer_reference for line in o.order_line)"/>
                            <t t-if="show_customer_ref_no">
                                <th name="th_mrefno" class="text-center"><strong>Müşteri Ref. No</strong></th>
                            </t>
            
                            <!-- YENA Çerçeve Antlaşma No -->
                            <!-- <t t-set="show_yant" t-value="any(line.blanket_order_line.order_id.partner_ref for line in o.order_line)"/>
                            <t t-if="show_yant">
                                <th name="th_yant" class="text-center"><strong>YENA Çerçeve Antlaşma No</strong></th>
                            </t>
                            <t t-else="">
                                <td class="text-center"> </td>
                            </t> -->
                            <!-- Adet -->
                            <t t-set="show_product_qty" t-value="any(line.product_qty for line in o.order_line)"/>
                            <t t-if="show_product_qty">
                            <th name="th_quantity" class="text-center"><strong>Adet</strong></th>
                            </t>
                            <!-- Teslim Tarihi -->
                            <t t-set="show_dateplanned" t-value="any(line.delivery_date for line in o.order_line)"/>
                            <t t-if="show_dateplanned">
                                <th name="th_datedplaned" class="text-center"><strong>Teslim Tarihi</strong></th>
                            </t>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.order_line" t-as="line">
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <!-- Ürün No -->
                                    <t t-if="show_product_no">
                                        <td class="text-center">
                                            <span t-field="line.product_id"/>
                                        </td>
                                    </t>
            
                                    <!-- Müşteri Ref. No -->
                                    <t t-if="show_customer_ref_no">
                                        <td id="mrefno" class="text-center">
                                            <span t-field="o.customer_reference"/>
                                        </td>
                                    </t>
            
                                    <!-- <t t-if="line.blanket_order_line.order_id.partner_ref">
                                        <td class="text-center">
                                            <span t-field="line.blanket_order_line.order_id.partner_ref"/>
                                        </td>
                                    </t> -->
                                    <t t-else="">
                                        <td class="text-center"> </td>
                                    </t>
                                    
                                    <!-- Adet -->
                                    <td class="text-center">
                                        <span t-field="line.product_qty"/>
                                    </td>
                                    <!-- Teslim Tarihi -->
                                    <t t-if="show_dateplanned">
                                        <td class="text-center">
                                            <span t-field="line.delivery_date"/>
                                        </td>
                                    </t>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <!-- Bölüm Başlığı -->
                                    <td colspan="99" id="section">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <!-- Not -->
                                    <td colspan="99" id="note">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                        
                                    <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                        
                                    </t>
                                </t>
                            </tbody>
                        </table>
                        <br/>
                    <br/>
                    
                 
                        
                        <span style="font-size:10pt"><b><u>Notlar:</u></b></span>
                        <span style="font-size:8pt" t-field="o.notes"/>
                        <div class="oe_structure"/>
                    </div>
                    
                  <div class="footer o_standard_footer" style="text-align:center;font-size:11px">
                      <ul class="list-inline mb4">
                      </ul>
                      <br/>
                      <br/>
                      <br/>
                      <br/>
                      
                      <t t-if="o.company_id.id == 2">
                          <div>
                              YENA ENGINEERING BV World Trade Center, Beursplein 37, 3011 AA Rotterdam, The Netherlands
                          </div>
                          <div >
                              P:+31 (0) 10 84 54 617 * yena@yenaengineering.nl * www.yenaengineering.nl 
                          </div>
                          <div>
                            BANK NAME: BUNQ * IBAN: NL26BUNQ2206607298 * BANK Swift Code: BUNQNL2AXXX
                          </div>
                          <div class="text-muted">
                              Page: <span class="page"/> / <span class="topage"/>
                          </div>
                      </t>
                      
                      <t t-else="">
                          <div>
                             <!--Genel Şirket Adresi, Şehir, Ülke
                          </div>
                          <div>
                              Telefon ve E-posta Bilgileri-->
                          </div>
                          <div  class="text-muted">
                              Page: <span class="page"/> / <span class="topage"/>
                          </div>
                      </t>
                  </div>
                    
                 
                </t>
        </template>
        <template id="report_purchase_rfq_hedef">
            <t t-name="reports_print.report_purchase_rfq_hedef">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-call="reports_print.report_purchase_rfq_hedef_document" t-lang="o.partner_id.lang"/>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>